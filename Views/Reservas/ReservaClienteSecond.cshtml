@model Reserva_Cine.Models.Wizard
@{
    ViewData["Title"] = "ReservaClienteSecond";
}

<h2>Seleccione la fecha y cantidad de butacas:</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ReservaClienteThird", "Reservas"))
        {
            <div class="form-group" style="display:none">
                <input asp-for="PeliculaId" value=@ViewBag.PeliculaId />
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" type="time" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadButacas" class="control-label"></label>
                <input asp-for="CantidadButacas" class="form-control" />
                <span asp-validation-for="CantidadButacas" class="text-danger"></span>
            </div>

            <input class="button" id="submit" type="submit" value="Continuar" />

        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}