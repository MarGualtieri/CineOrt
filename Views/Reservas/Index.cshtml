@model IEnumerable<Reserva_Cine.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservas</h1>

<p>
   <a asp-action="Create" class="btn btn-outline-primary">Crear Reserva </a>
    <a href="../Home/Index" class="btn btn-danger">Cancelar</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadButacas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var email = User.Identity.Name;
            foreach (var item in Model)
            {
                if (item.Cliente.Email == email)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Funcion.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaAlta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CantidadButacas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a class="btn btn-outline-info btn-sm ml-1" asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                            <a class="btn btn-outline-danger btn-sm ml-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            }
        }
        @if (User.IsInRole(nameof(Empleado))) {
                foreach (var item in Model)
                {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Funcion.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadButacas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-outline-info btn-sm ml-1" asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                <a class="btn btn-outline-danger btn-sm ml-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
                    }
                
            }

    </tbody>
</table>

