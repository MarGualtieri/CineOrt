@model Reserva_Cine.Models.Wizard

@{
    ViewData["Title"] = "ReservaClienteThird";
}

<h2>Seleccione la función:</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.cantFunciones > 0)
        {
            using (Html.BeginForm("ReservaClienteCreate", "Reservas"))
            {
                <div class="form-group" style="display:none">
                    <input asp-for="CantidadButacas" value=@ViewBag.CantidadButacas />
                </div>

                <div class="form-group">
                    <label asp-for="FuncionId" class="control-label"></label>
                    <select asp-for="FuncionId" class="form-control" asp-items="ViewBag.FuncionId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Confirmar" class="btn btn-success" />
                    <a href="../Home/Index" class="btn btn-danger">Cancelar</a>
                </div>}
        }
        else
        {<p>No hay funciones disponibles</p>
            <a href="../Home/Index" class="btn btn-danger">Cancelar reserva</a>

        }
 



    </div>
</div>
