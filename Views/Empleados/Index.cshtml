@model IEnumerable<Reserva_Cine.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h2>REGISTRO DE EMPLEADOS</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary"> Crear Empleado </a>
    <a href="../Home/Index" class="btn btn-danger">Cancelar</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
           
            <td>
             <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                <a class="btn btn-outline-info btn-sm ml-1" asp-action="Details" asp-route-id="@item.ID">Ver detalles</a> 
                <a class="btn btn-outline-danger btn-sm ml-1" asp-action="Delete" asp-route-id="@item.ID">Eliminar</a> 

        
            </td>
        </tr>
}
    </tbody>
</table>
