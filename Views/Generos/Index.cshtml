@model IEnumerable<Reserva_Cine.Models.Genero>

@{
    ViewData["Title"] = "Index";
}

<h1>Genero</h1>

<p>
     <a asp-action="Create" class="btn btn-outline-primary">Crear Genero </a>
    <a href="../Home/Index" class="btn btn-danger">Cancelar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
             
              <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-outline-info btn-sm ml-1" asp-action="Details" asp-route-id="@item.Id">Ver detalles</a> 
                <a class="btn btn-outline-danger btn-sm ml-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> 
            </td>
        </tr>
}
    </tbody>
</table>
